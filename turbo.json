{
  "$schema": "https://v2-7-6.turborepo.dev/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**"]
    },
    "check-types": {
      "dependsOn": ["^check-types"]
    },
    "fmt": {
      "dependsOn": ["^fmt"]
    },
    "fmt:check": {
      "dependsOn": ["^fmt:check"]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "lint:fix": {
      "dependsOn": ["^lint:fix"]
    },
    "dev": {
      "persistent": true,
      "cache": false
    }
  }
}
